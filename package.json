{
  "name": "blockchain-all",
  "version": "2.0.0",
  "description": "Complete Blockchain System Backend",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "migrate": "node ./migrations/001_init_tables.js",
    "migrate:enhanced": "node ./migrations/003_enhanced_features.js",
    "seed": "node ./migrations/002_seed_data.js",
    "setup": "npm run migrate && npm run migrate:enhanced && npm run seed",
    "reset": "npm run migrate --force && npm run migrate:enhanced --force && npm run seed",
    "test": "jest --coverage",
    "p2p:start": "node ./p2p/peer.js",
    "miner:start": "node ./mining/miner.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "elliptic": "^6.6.1",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.1.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cache": "^5.1.2",
    "rate-limiter-flexible": "^2.4.2",
    "uuid": "^9.0.1",
    "web3": "^4.13.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}
