# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=blockchain_all

# JWT Configuration
JWT_SECRET=blockchain-secret-key-2024-change-in-production
JWT_EXPIRES_IN=24h

# P2P Network Configuration
ENABLE_P2P=true
P2P_PORT=5002
BOOTSTRAP_NODES=localhost:5002,localhost:5003

# Mining Configuration
ENABLE_MINING=true
MINER_ADDRESS=0xYourMinerAddressHere
MINING_THREADS=4
MINING_REWARD=50

# Bridge Configuration
ENABLE_BRIDGE=true
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
ETH_BRIDGE_CONTRACT=0xYourEthBridgeContract
BSC_BRIDGE_CONTRACT=0xYourBscBridgeContract

# Smart Contract Configuration
CONTRACT_GAS_LIMIT=3000000
CONTRACT_GAS_PRICE=20

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=blockchain.log